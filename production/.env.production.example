# Production Environment Variables for Windows RTX 4080
# Copy to production/.env and update values
# This is used by podman-compose.yml

# ========== Container Registry ==========
REGISTRY=ghcr.io
IMAGE_PREFIX=yourorg/singularity
IMAGE_TAG=latest

# ========== PostgreSQL ==========
POSTGRES_PASSWORD=your-super-secure-postgres-password-change-this
POSTGRES_DB_HOST=postgresql
POSTGRES_DB_PORT=5432
POSTGRES_DB_USER=postgres

# ========== Database URLs ==========
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://postgres:your-super-secure-postgres-password-change-this@postgresql:5432/singularity
CENTRALCLOUD_DATABASE_URL=postgres://postgres:your-super-secure-postgres-password-change-this@postgresql:5432/centralcloud
GENESIS_DATABASE_URL=postgres://postgres:your-super-secure-postgres-password-change-this@postgresql:5432/genesis

# ========== Application Secrets ==========
SECRET_KEY_BASE=your-secret-key-base-min-64-characters-for-phoenix-sessions-change-this-to-random-string
MIX_ENV=prod
LOG_LEVEL=info

# ========== NATS Configuration ==========
NATS_HOST=nats
NATS_PORT=4222

# ========== Singularity Configuration ==========
PHX_HOST=localhost
PHX_PORT=4000
CENTRALCLOUD_URL=http://centralcloud:4000
GENESIS_URL=http://genesis:4000
LLM_SERVER_URL=http://llm-server:3000
XLA_TARGET=cuda118

# ========== AI Provider APIs (Required) ==========
ANTHROPIC_API_KEY=sk-ant-change-this-to-your-key
GOOGLE_AI_STUDIO_API_KEY=change-this-to-your-key
OPENAI_API_KEY=sk-proj-change-this-to-your-key

# ========== CentralCloud Configuration ==========
FRAMEWORK_LEARNING_ENABLED=true
PACKAGE_SYNC_ENABLED=true
PACKAGE_SYNC_SCHEDULE=0 2 * * *

# ========== Genesis Configuration ==========
METRICS_TRACKING_ENABLED=true
AUTO_ROLLBACK_ENABLED=true
ROLLBACK_THRESHOLD=0.90

# ========== Network Configuration ==========
RELEASE_DISTRIBUTION=name
RELEASE_NODE=singularity@127.0.0.1

# ========== GPU Configuration ==========
# For RTX 4080 on Windows: cuda118
# For macOS with Metal: metal
# For CPU only: cpu
CUDA_VISIBLE_DEVICES=0

# ========== Optional: Nginx SSL/TLS ==========
# Only needed if using HTTPS (not needed for localhost)
# NGINX_CERT_PATH=/path/to/cert.pem
# NGINX_KEY_PATH=/path/to/key.pem
