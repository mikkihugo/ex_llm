{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Technology Detection Template Schema",
  "description": "Schema for technology/framework/language detection templates with LLM support",
  "type": "object",
  "required": [
    "name",
    "category",
    "version",
    "detector_signatures"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Technology name (e.g., 'Rust', 'Django', 'PostgreSQL')"
    },
    "category": {
      "type": "string",
      "enum": [
        "language",
        "framework",
        "database",
        "messaging",
        "security",
        "monitoring",
        "cloud",
        "build_tool"
      ],
      "description": "Technology category"
    },
    "version": {
      "type": "string",
      "description": "Template version (semantic versioning)"
    },
    "detector_signatures": {
      "type": "object",
      "required": [
        "patterns"
      ],
      "properties": {
        "config_files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Configuration files that indicate this technology"
        },
        "file_extensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "File extensions for this technology"
        },
        "patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Regex patterns that match code signatures",
          "minItems": 1
        },
        "import_patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Patterns to extract imports/dependencies from code"
        },
        "dependencies": {
          "type": "object",
          "properties": {
            "file": {
              "type": "string"
            },
            "section": {
              "type": "string"
            },
            "common_packages": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "framework_hints": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "patterns",
          "confidence_boost"
        ],
        "properties": {
          "patterns": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "config_files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "confidence_boost": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "build_commands": {
      "type": "object",
      "properties": {
        "install": {
          "type": "string"
        },
        "build": {
          "type": "string"
        },
        "dev": {
          "type": "string"
        },
        "test": {
          "type": "string"
        },
        "check": {
          "type": "string"
        },
        "start": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "ecosystem": {
          "type": "string"
        },
        "package_manager": {
          "type": "string"
        },
        "typical_structure": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "llm_support": {
      "type": "object",
      "properties": {
        "analysis_prompts": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "prompt_bits": {
          "type": "object",
          "properties": {
            "context": {
              "type": "string"
            },
            "best_practices": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "common_mistakes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "code_snippets": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": [
              "description",
              "code",
              "patterns"
            ],
            "properties": {
              "description": {
                "type": "string"
              },
              "code": {
                "type": "string"
              },
              "patterns": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "github_examples": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "best_practice": {
                "type": "boolean"
              },
              "use_case": {
                "type": "string"
              }
            }
          }
        },
        "fact_sources": {
          "type": "object",
          "properties": {
            "github_repos": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "documentation": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uri"
              }
            },
            "common_crates": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "_metadata_type": "schema",
  "parent_pattern": null
}