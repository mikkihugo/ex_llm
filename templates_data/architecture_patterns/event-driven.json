{
  "id": "event-driven",
  "name": "Event-Driven Architecture",
  "category": "architecture",
  "version": "1.0.0",
  "description": "Architecture pattern where components communicate through events. Producers emit events when state changes, consumers react asynchronously.",
  "aliases": [
    "EDA",
    "Event-Based Architecture",
    "Message-Driven Architecture"
  ],
  "types": [
    {
      "type": "simple",
      "description": "One event triggers one action"
    },
    {
      "type": "streaming",
      "description": "Process continuous event streams with windowing/aggregation"
    },
    {
      "type": "cep",
      "description": "Complex Event Processing - pattern matching across events"
    },
    {
      "type": "event_sourcing",
      "description": "Events as source of truth (append-only log)"
    }
  ],
  "indicators": [
    {
      "name": "event_bus",
      "description": "Message broker for event distribution (NATS, Kafka, RabbitMQ)",
      "weight": 0.95,
      "required": true
    },
    {
      "name": "event_producers",
      "description": "Components that publish/emit events",
      "weight": 0.85,
      "required": true
    },
    {
      "name": "event_consumers",
      "description": "Components that subscribe to and handle events",
      "weight": 0.85,
      "required": true
    },
    {
      "name": "event_schemas",
      "description": "Well-defined event formats/contracts",
      "weight": 0.75,
      "required": false
    },
    {
      "name": "asynchronous_flow",
      "description": "Producers don't wait for consumers (fire-and-forget)",
      "weight": 0.8,
      "required": true
    }
  ],
  "benefits": [
    "Loose coupling (producers/consumers independent)",
    "Scalability (consumers scale independently)",
    "Flexibility (add consumers without changing producers)",
    "Resilience (async = failures don't cascade)"
  ],
  "concerns": [
    "Eventual consistency (no immediate consistency)",
    "Debugging difficulty (distributed event flows)",
    "Event schema evolution challenges",
    "Idempotency required (events may deliver multiple times)"
  ],
  "required_practices": [
    {
      "practice": "Idempotency",
      "priority": "REQUIRED"
    },
    {
      "practice": "Distributed Tracing",
      "priority": "REQUIRED"
    },
    {
      "practice": "Event Versioning",
      "priority": "RECOMMENDED"
    },
    {
      "practice": "Dead Letter Queue",
      "priority": "RECOMMENDED"
    }
  ],
