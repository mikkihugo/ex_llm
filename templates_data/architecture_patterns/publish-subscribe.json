{
  "id": "publish_subscribe",
  "name": "Publish-Subscribe Communication Pattern",
  "category": "architecture",
  "version": "1.0.0",
  "description": "Asynchronous communication pattern where services publish events to topics, and interested services subscribe to topics.",
  "aliases": [
    "Pub-Sub",
    "Topic-Based Publishing"
  ],
  "pubsub_types": [
    {
      "type": "topic_based",
      "description": "Services subscribe to named topics"
    },
    {
      "type": "content_based",
      "description": "Subscriptions based on event content/properties"
    },
    {
      "type": "typed_events",
      "description": "Type-safe event subscriptions"
    }
  ],
  "indicators": [
    {
      "name": "event_topics",
      "description": "Named topics for event distribution",
      "weight": 0.95,
      "required": true
    },
    {
      "name": "publishers",
      "description": "Services publish events",
      "weight": 0.9,
      "required": true
    },
    {
      "name": "subscribers",
      "description": "Services subscribe to topics",
      "weight": 0.9,
      "required": true
    },
    {
      "name": "asynchronous_delivery",
      "description": "Publishers don't wait for subscribers",
      "weight": 0.9,
      "required": true
    }
  ],
  "benefits": [
    "Loose coupling (publishers don't know subscribers)",
    "Easy to add new subscribers",
    "Asynchronous processing",
    "Better scalability (non-blocking)"
  ],
  "concerns": [
    "Eventual consistency (ordering/delivery guarantees)",
    "Debugging distributed event flows",
    "Ordering challenges (FIFO not always guaranteed)",
    "Potential for message loss (depends on broker)"
  ],
  "when_to_use": [
    "Loose coupling desired",
    "Multiple consumers for one event",
    "Asynchronous processing acceptable",
    "Non-critical operations"
  ],
  "when_not_to_use": [
    "Immediate response required",
    "Strong ordering guarantees needed",
    "Guaranteed delivery critical"
  ],
  "required_practices": [
    {
      "practice": "Topic Design",
      "priority": "REQUIRED",
      "description": "Well-designed topic hierarchy"
    },
    {
      "practice": "Idempotency",
      "priority": "REQUIRED",
      "description": "Handle duplicate deliveries"
    },
    {
      "practice": "Dead Letter Queue",
      "priority": "RECOMMENDED",
      "description": "Handle failed message processing"
    }
  ],
  "tools_and_frameworks": [
    "NATS",
    "Kafka",
    "RabbitMQ",
    "AWS SNS",
    "Azure Event Grid"
  ],
