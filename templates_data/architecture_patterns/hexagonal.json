{
  "id": "hexagonal",
  "name": "Hexagonal Architecture",
  "category": "architecture",
  "version": "1.0.0",
  "description": "Architecture pattern isolating business logic from external concerns using ports (interfaces) and adapters (implementations). Core depends on abstractions, not concretions.",
  "aliases": [
    "Ports and Adapters",
    "Clean Architecture",
    "Onion Architecture"
  ],
  "layers": [
    {
      "layer": "domain_core",
      "description": "Pure business logic at center",
      "dependencies": "ports only (no frameworks, databases, HTTP)"
    },
    {
      "layer": "ports",
      "description": "Interfaces defining contracts",
      "types": [
        "input ports (driving)",
        "output ports (driven)"
      ]
    },
    {
      "layer": "adapters",
      "description": "Implementations of ports",
      "types": [
        "HTTP adapters",
        "Database adapters",
        "External API adapters"
      ]
    }
  ],
  "indicators": [
    {
      "name": "isolated_domain_core",
      "description": "Domain layer has zero framework dependencies",
      "weight": 0.95,
      "required": true
    },
    {
      "name": "port_definitions",
      "description": "Interfaces/protocols defining contracts",
      "weight": 0.9,
      "required": true
    },
    {
      "name": "adapter_implementations",
      "description": "Adapters implement ports",
      "weight": 0.85,
      "required": true
    },
    {
      "name": "dependency_inversion",
      "description": "Core depends on ports (abstractions), not adapters (concretions)",
      "weight": 0.9,
      "required": true
    }
  ],
  "benefits": [
    "Testability (mock ports, test core in isolation)",
    "Framework independence",
    "Database independence",
    "Flexibility (swap adapters without changing core)"
  ],
  "concerns": [
    "More complex than layered architecture",
    "Requires discipline",
    "More files (interfaces + implementations)"
  ],
  "dependency_rule": "Core \u2192 Ports \u2705 | Core \u2192 Adapters \u274c | Adapters \u2192 Ports \u2705 | Adapters \u2192 Core \u2705",
