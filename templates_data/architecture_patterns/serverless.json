{
  "id": "serverless",
  "name": "Serverless Architecture",
  "category": "architecture",
  "version": "1.0.0",
  "description": "Function-based architecture where code runs in managed serverless environments (Lambda, Cloud Functions, Cloud Run). Functions are stateless, event-driven, auto-scaling.",
  "aliases": [
    "FaaS",
    "Function-as-a-Service"
  ],
  "serverless_types": [
    {
      "type": "event_driven_functions",
      "description": "Functions triggered by events (S3, API Gateway, etc)"
    },
    {
      "type": "api_functions",
      "description": "Functions exposing APIs via API Gateway"
    },
    {
      "type": "background_workers",
      "description": "Functions processing jobs from queues"
    }
  ],
  "indicators": [
    {
      "name": "serverless_runtime",
      "description": "Functions running in serverless environment",
      "weight": 0.95,
      "required": true
    },
    {
      "name": "stateless_functions",
      "description": "No local state persistence between invocations",
      "weight": 0.9,
      "required": true
    },
    {
      "name": "event_triggers",
      "description": "Functions triggered by events",
      "weight": 0.85,
      "required": true
    },
    {
      "name": "auto_scaling",
      "description": "Automatic scaling based on demand",
      "weight": 0.8,
      "required": true
    }
  ],
  "benefits": [
    "No infrastructure management",
    "Pay only for execution time",
    "Auto-scaling (no capacity planning)",
    "High availability built-in",
    "Easy to deploy (just upload code)"
  ],
  "concerns": [
    "Cold start latency",
    "Limited execution time (5-15 min limits)",
    "Stateless only (use external storage)",
    "Vendor lock-in",
    "Debugging difficulty (distributed)",
    "Limited local resources"
  ],
  "when_to_use": [
    "Event-driven workloads",
    "Bursty traffic patterns",
    "Short-running operations",
    "No infrastructure desired",
    "Cost-sensitive applications"
  ],
  "when_not_to_use": [
    "Long-running processes (>5 min)",
    "Real-time requirements (cold starts)",
    "Stateful applications",
    "Multiple languages in single app"
  ],
  "required_practices": [
    {
      "practice": "Stateless Design",
      "priority": "REQUIRED",
      "description": "All state in external storage"
    },
    {
      "practice": "Cold Start Optimization",
      "priority": "RECOMMENDED",
      "description": "Minimize initialization overhead"
    },
    {
      "practice": "Monitoring",
      "priority": "REQUIRED",
      "description": "Understand performance and costs"
    }
  ],
  "tools_and_frameworks": [
    "AWS Lambda",
    "Google Cloud Functions",
    "Azure Functions",
    "IBM Cloud Functions",
    "Vercel",
    "Netlify Functions"
  ],
