{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://singularity.dev/schemas/template/v2.0",
  "title": "Singularity Template Schema v2.0",
  "description": "Unified schema for all template types with composition support",
  "type": "object",
  "required": ["id", "category", "metadata", "content"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique template identifier (kebab-case)",
      "pattern": "^[a-z0-9-]+$",
      "examples": ["elixir-genserver", "rust-api-endpoint", "phoenix-authenticated-api"]
    },
    "category": {
      "type": "string",
      "description": "Template category",
      "enum": [
        "base",
        "bit",
        "code_generation",
        "code_snippet",
        "framework",
        "prompt",
        "quality_standard",
        "workflow"
      ]
    },
    "metadata": {
      "type": "object",
      "required": ["name", "version", "description"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "version": {
          "type": "string",
          "description": "Semantic version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string",
          "description": "What this template does"
        },
        "author": {
          "type": "string",
          "default": "singularity"
        },
        "language": {
          "type": "string",
          "description": "Primary programming language",
          "enum": ["elixir", "gleam", "rust", "python", "javascript", "typescript", "go", "java", "multi"]
        },
        "framework": {
          "type": "string",
          "description": "Framework if applicable",
          "examples": ["phoenix", "react", "fastapi", "django", "nextjs"]
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Searchable tags"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "content": {
      "oneOf": [
        {
          "type": "object",
          "description": "Code template",
          "required": ["type", "code"],
          "properties": {
            "type": {"const": "code"},
            "code": {
              "type": "string",
              "description": "Template code with {{variables}}"
            },
            "variables": {
              "type": "object",
              "description": "Variable definitions",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "type": {"type": "string"},
                  "description": {"type": "string"},
                  "required": {"type": "boolean"},
                  "default": {"type": "string"}
                }
              }
            }
          }
        },
        {
          "type": "object",
          "description": "Multi-snippet template",
          "required": ["type", "snippets"],
          "properties": {
            "type": {"const": "snippets"},
            "snippets": {
              "type": "object",
              "description": "Named code snippets",
              "additionalProperties": {
                "type": "object",
                "required": ["code"],
                "properties": {
                  "description": {"type": "string"},
                  "file_path": {"type": "string"},
                  "code": {"type": "string"},
                  "language": {"type": "string"},
                  "compose": {
                    "type": "array",
                    "items": {"type": "string"},
                    "description": "Bits to compose into this snippet"
                  }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "description": "LLM prompt template",
          "required": ["type", "system", "user"],
          "properties": {
            "type": {"const": "prompt"},
            "system": {"type": "string"},
            "user": {"type": "string"},
            "original_system": {
              "type": "string",
              "description": "Base/original prompt before customization"
            },
            "variables": {"type": "object"},
            "complexity_level": {
              "type": "string",
              "enum": ["simple", "medium", "complex"]
            }
          }
        },
        {
          "type": "object",
          "description": "Quality standard",
          "required": ["type", "requirements"],
          "properties": {
            "type": {"const": "quality"},
            "requirements": {
              "type": "object",
              "description": "Quality requirements"
            }
          }
        }
      ]
    },
    "extends": {
      "type": "string",
      "description": "Base template ID to extend from",
      "examples": ["base/elixir-module", "base/rust-struct"]
    },
    "compose": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Bit template IDs to compose",
      "examples": [
        ["bits/authentication/guardian", "bits/observability/telemetry"],
        ["bits/validation/ecto-changeset", "bits/testing/exunit"]
      ]
    },
    "quality_standard": {
      "type": "string",
      "description": "Quality standard to apply",
      "examples": ["quality_standards/elixir/production", "quality_standards/rust/production"]
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {"type": "string"},
              "version": {"type": "string"},
              "ecosystem": {
                "type": "string",
                "enum": ["hex", "cargo", "npm", "pypi", "maven"]
              }
            }
          }
        },
        "optional": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "purpose"],
            "properties": {
              "name": {"type": "string"},
              "version": {"type": "string"},
              "purpose": {"type": "string"}
            }
          }
        }
      }
    },
    "examples": {
      "type": "array",
      "description": "Usage examples",
      "items": {
        "type": "object",
        "properties": {
          "description": {"type": "string"},
          "variables": {"type": "object"},
          "output": {"type": "string"}
        }
      }
    },
    "related": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Related template IDs"
    }
  }
}
