{
  "template_architecture": {
    "version": "1.0.0",
    "design_principles": [
      "modularity",
      "composability",
      "scalability",
      "versioning",
      "inheritance",
      "override_capability"
    ],
    "structure": {
      "base_templates": {
        "path": "base/",
        "purpose": "Core language-specific quality standards",
        "naming": "{language}_production.json",
        "examples": [
          "elixir_production.json",
          "rust_production.json",
          "typescript_production.json",
          "python_production.json",
          "gleam_production.json"
        ]
      },
      "phase_templates": {
        "path": "phases/",
        "purpose": "SPARC workflow phase-specific patterns",
        "naming": "{phase}.json",
        "examples": [
          "research.json",
          "specification.json",
          "pseudocode.json",
          "architecture.json",
          "implementation.json"
        ]
      },
      "domain_templates": {
        "path": "domains/",
        "purpose": "Domain-specific patterns (web, mobile, AI, etc.)",
        "naming": "{domain}.json",
        "examples": [
          "web_application.json",
          "mobile_app.json",
          "ai_ml.json",
          "microservice.json",
          "data_pipeline.json"
        ]
      },
      "composite_templates": {
        "path": "composite/",
        "purpose": "Pre-composed templates for common use cases",
        "naming": "{language}_{phase}_{domain}.json",
        "examples": [
          "elixir_implementation_web_application.json",
          "rust_architecture_microservice.json",
          "typescript_research_ai_ml.json"
        ]
      },
      "enterprise_templates": {
        "path": "enterprise/",
        "purpose": "Enterprise-specific compliance and patterns",
        "naming": "{enterprise}_{language}.json",
        "examples": [
          "ericsson_elixir.json",
          "google_rust.json",
          "microsoft_typescript.json"
        ]
      }
    },
    "inheritance_model": {
      "extends": {
        "type": "array",
        "description": "List of template IDs to inherit from",
        "order": "first_to_last_override",
        "example": [
          "elixir_production",
          "implementation",
          "web_application"
        ]
      },
      "overrides": {
        "type": "object",
        "description": "Override specific sections from inherited templates",
        "example": {
          "quality_checklist": [
            "additional_checkpoint_1",
            "additional_checkpoint_2"
          ],
          "relationship_annotations.patterns": {
            "custom_pattern": "# @custom: description"
          }
        }
      },
      "merges": {
        "type": "object",
        "description": "Merge arrays/objects from inherited templates",
        "example": {
          "quality_checklist": "append",
          "patterns": "merge",
          "anti_patterns": "merge"
        }
      }
    },
    "versioning_strategy": {
      "semantic_versioning": true,
      "backward_compatibility": "maintained_for_2_major_versions",
      "migration_scripts": "auto_generated",
      "deprecation_warnings": "6_month_notice"
    },
    "scalability_features": {
      "lazy_loading": true,
      "template_caching": true,
      "incremental_updates": true,
      "distributed_validation": true,
      "performance_metrics": true
    }
  },
  "parent_pattern": null
}