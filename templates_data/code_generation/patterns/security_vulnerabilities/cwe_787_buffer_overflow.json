{
  "pattern_id": "cwe_787_buffer_overflow",
  "name": "Out-of-bounds Write (Buffer Overflow)",
  "cwe": "CWE-787",
  "severity": "critical",
  "applicable_languages": ["c", "cpp", "go", "rust"],
  "description": "Writing past buffer boundaries can lead to code execution",
  "vulnerability_patterns": [
    {
      "language": "c",
      "bad_code": [
        "char buffer[10];\nstrcpy(buffer, user_input);",
        "gets(buffer);",
        "sprintf(buffer, format, args);"
      ],
      "good_code": [
        "char buffer[10];\nstrncpy(buffer, user_input, sizeof(buffer)-1);",
        "fgets(buffer, sizeof(buffer), stdin);",
        "snprintf(buffer, sizeof(buffer), format, args);"
      ]
    }
  ],
  "detection_rules": {
    "patterns": ["strcpy", "gets", "sprintf", "Unbounded array access"]
  },
  "remediation": {
    "steps": ["Use safe functions", "Bounds checking", "Use modern languages", "Static analysis"]
  },
  "impact": {
