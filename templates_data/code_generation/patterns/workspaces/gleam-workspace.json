{
  "$schema": "https://singularity.dev/schemas/template/v1",
  "version": "1.0",
  "type": "workspace_pattern",
  "metadata": {
    "id": "gleam-workspace",
    "name": "Gleam Workspace",
    "description": "Gleam monorepo using gleam workspaces",
    "language": "gleam",
    "tags": [
      "workspace",
      "monorepo",
      "gleam",
      "functional"
    ],
    "author": "singularity",
    "created": "2025-01-15",
    "updated": "2025-01-15"
  },
  "content": {
    "detection": {
      "indicators": [
        "gleam.toml with workspace configuration",
        "Multiple gleam.toml files in subdirectories",
        "packages/ directory with multiple packages",
        "gleam.lock file"
      ],
      "confidence_threshold": 0.8
    },
    "structure": {
      "root_files": [
        "gleam.toml",
        "gleam.lock"
      ],
      "workspace_members": [
        "packages/*",
        "apps/*"
      ],
      "common_directories": [
        "packages/",
        "apps/",
        "test/",
        "src/"
      ]
    },
    "commands": {
      "build": [
        "gleam build",
        "gleam build --force"
      ],
      "test": [
        "gleam test",
        "gleam test --watch"
      ],
      "lint": [
        "gleam check",
        "gleam format --check"
      ],
      "format": [
        "gleam format",
        "gleam format --check"
      ],
      "install": [
        "gleam deps download",
        "gleam deps compile"
      ]
    },
    "naming_conventions": {
      "modules": "snake_case",
      "files": "snake_case",
      "functions": "snake_case",
      "variables": "snake_case",
      "types": "PascalCase",
      "directories": "snake_case"
    },
    "dependencies": {
      "workspace_deps": "defined in root gleam.toml",
      "member_deps": "referenced in package gleam.toml files",
      "shared_deps": "defined in root gleam.toml deps"
    }
  },
  "quality": {
    "rules": [
      "must_have_gleam_config",
      "must_use_consistent_functional_structure",
      "must_have_shared_dependencies"
    ],
    "score": 0.9
  },
  "parent_pattern": null
}