{
  "name": "nexus",
  "type": "module",
  "version": "1.0.0",
  "description": "Unified Nexus Server: LLM Router + HITL Control Panel for Singularity, Genesis, and CentralCloud using Remix + Bun",
  "private": true,
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "bun run ./build/index.js",
    "test": "bun test",
    "type-check": "tsc --noEmit",
    "format": "prettier --write --ignore-unknown .",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:drop": "drizzle-kit drop",
    "db:studio": "drizzle-kit studio",
    "test:hitl": "bun run scripts/test-hitl-flow.ts",
    "test:approval": "bun run scripts/send-test-approval.ts approved",
    "test:rejection": "bun run scripts/send-test-approval.ts rejected",
    "test:question": "bun run scripts/send-test-question.ts"
  },
  "dependencies": {
    "@remix-run/express": "^2.15.1",
    "@remix-run/node": "^2.15.1",
    "@remix-run/react": "^2.15.1",
    "drizzle-orm": "^0.44.7",
    "express": "^4.21.1",
    "google-auth-library": "^10.4.2",
    "isbot": "^3.8.0",
    "pg": "^8.11.3",
    "react": "^19.0.0-rc-66d8c5d0-20241218",
    "react-dom": "^19.0.0-rc-66d8c5d0-20241218",
    "tailwindcss": "^3.4.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.1",
    "@types/express": "^4.17.21",
    "@types/node": "^24.9.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.31.5",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
