{
    "name": "TSX Component Production Quality",
    "spec_version": "2.0",
    "capabilities": [
        "quality",
        "graph",
        "rag"
    ],
    "language": "typescript_tsx",
    "quality_level": "production",
    "description": "Production standards for React/TSX components with focus on accessibility, stability, and composability.",
    "requirements": {
        "documentation": {
            "component_jsdoc": {
                "required": true,
                "must_include": [
                    "description",
                    "props",
                    "examples",
                    "accessibility"
                ]
            }
        },
        "props": {
            "explicit_interface": true,
            "no_any": true,
            "prefer_discriminated_unions": true
        },
        "a11y": {
            "required": true,
            "must_address": [
                "aria-labels",
                "focus-order",
                "keyboard-nav"
            ]
        },
        "testing": {
            "framework": "vitest + @testing-library/react",
            "required": true,
            "coverage_target": 85,
            "test_types": [
                "behavior",
                "a11y",
                "snapshot_optional"
            ]
        },
        "performance": {
            "guidelines": [
                "avoid inline functions in hot lists",
                "memoize expensive renders"
            ],
            "metrics": [
                "render_count",
                "hook_allocation"
            ]
        }
    },
    "graph_model": {
        "version": 1,
        "node_types": {
            "component": {
                "id_format": "tsx://{path}#{component}",
                "merge_keys": [
                    "component"
                ]
            },
            "hook": {
                "id_format": "tsx://{path}#hook/{name}",
                "merge_keys": [
                    "name"
                ]
            }
        },
        "edge_types": {
            "renders": {
                "from": "component",
                "to": "component",
                "weight": 0.6
            },
            "uses_hook": {
                "from": "component",
                "to": "hook",
                "weight": 0.9
            }
        },
        "extraction_rules": {
            "component_detection": "export function | const Name: React.FC",
            "hook_detection": "function names starting with use",
            "a11y_flags": "scan JSX props for aria-*"
        },
        "temporal": {
            "track": true,
            "fields": [
                "first_seen",
                "last_modified"
            ],
            "update_policy": "touch_last_modified_on_signature_change"
        },
        "error_semantics": {
            "severity_enum": [
                "fatal",
                "transient",
                "validation"
            ],
            "classification_enum": [
                "user_input",
                "external_dependency"
            ],
            "default_severity": "validation"
        }
    },
    "version": 1,
    "last_updated": "2025-10-08"
}