<div class="py-8 px-4 sm:px-6 lg:px-8">
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-3xl font-bold text-gray-900">Documentation System</h2>
        <p class="mt-1 text-sm text-gray-500">Multi-language quality enforcement and upgrades</p>
      </div>
      <div class="flex items-center space-x-4">
        <.badge variant={if @health_status == "healthy", do: "default", else: "destructive"}>
          <%= get_health_status_text(@health_status) %>
        </.badge>
        <.button phx-click="refresh" variant="outline" size="sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Refresh
        </.button>
      </div>
    </div>
  </div>
    <!-- Flash Messages using Salad UI Alert -->
    <%= if @flash[:info] do %>
      <.alert variant="default" class="mb-4 bg-blue-50 border-blue-200">
        <div class="flex items-center">
          <svg class="h-5 w-5 text-blue-600 mr-3" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
          <p class="text-sm text-blue-700"><%= @flash[:info] %></p>
        </div>
      </.alert>
    <% end %>

    <%= if @flash[:error] do %>
      <.alert variant="destructive" class="mb-4">
        <div class="flex items-center">
          <svg class="h-5 w-5 text-red-600 mr-3" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
          <p class="text-sm text-red-700"><%= @flash[:error] %></p>
        </div>
      </.alert>
    <% end %>

    <!-- Status Cards using Salad UI -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-8">
      <!-- Pipeline Status -->
      <.card>
        <.card_header>
          <.card_title class="flex items-center">
            <svg class="h-5 w-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Pipeline Status
          </.card_title>
        </.card_header>
        <.card_content>
          <p class="text-2xl font-bold">
            <%= if @pipeline_status.pipeline_running do %>
              <span class="text-yellow-600">Running</span>
            <% else %>
              <span class="text-green-600">Idle</span>
            <% end %>
          </p>
          <p class="text-sm text-gray-500 mt-2">
            Last Run: <%= format_timestamp(@pipeline_status.last_run) %>
          </p>
        </.card_content>
      </.card>

      <!-- Quality Compliance -->
      <.card>
        <.card_header>
          <.card_title class="flex items-center">
            <svg class="h-5 w-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Compliance Rate
          </.card_title>
        </.card_header>
        <.card_content>
          <p class="text-2xl font-bold">
            <%= format_percentage(@quality_report.compliance_rate) %>
          </p>
          <p class="text-sm text-gray-500 mt-2">
            Files: <%= @quality_report.compliant || 0 %>/<%= @quality_report.total_files || 0 %>
          </p>
        </.card_content>
      </.card>

      <!-- Quality Gates -->
      <.card>
        <.card_header>
          <.card_title class="flex items-center">
            <svg class="h-5 w-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Quality Gates
          </.card_title>
        </.card_header>
        <.card_content>
          <p class="text-2xl font-bold">
            <%= if @quality_report.quality_gates_enabled do %>
              <span class="text-green-600">Enabled</span>
            <% else %>
              <span class="text-red-600">Disabled</span>
            <% end %>
          </p>
          <p class="text-sm text-gray-500 mt-2">
            Auto-Upgrades:
            <%= if @pipeline_status.automatic_upgrades_enabled do %>
              Every <%= @pipeline_status.upgrade_interval || 60 %>min
            <% else %>
              Disabled
            <% end %>
          </p>
        </.card_content>
      </.card>
    </div>

    <!-- Action Buttons using Salad UI Card -->
    <.card class="mb-8">
      <.card_header>
        <.card_title>Documentation Actions</.card_title>
      </.card_header>
      <.card_content>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
          <.button phx-click="start_full_upgrade" disabled={@upgrade_in_progress} variant="default">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Full Upgrade
          </.button>

          <.button phx-click="start_incremental_upgrade" disabled={@upgrade_in_progress} variant="default">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Incremental
          </.button>

          <%= if @quality_report.quality_gates_enabled do %>
            <.button phx-click="disable_quality_gates" variant="destructive">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728" />
              </svg>
              Disable Gates
            </.button>
          <% else %>
            <.button phx-click="enable_quality_gates" variant="default">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Enable Gates
            </.button>
          <% end %>

          <.button phx-click="schedule_automatic_upgrades" phx-value-interval="60" variant="outline">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Auto-Upgrade
          </.button>

          <.button phx-click="run_self_awareness" variant="secondary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            Self-Awareness
          </.button>
        </div>
      </.card_content>
    </.card>

    <!-- Language Breakdown using Salad UI Card -->
    <%= if @quality_report.languages && map_size(@quality_report.languages) > 0 do %>
      <.card class="mb-8">
        <.card_header>
          <.card_title>Language Breakdown</.card_title>
          <.card_description>Code quality per programming language</.card_description>
        </.card_header>
        <.card_content>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <%= for {language, stats} <- @quality_report.languages do %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between mb-3">
                  <h4 class="text-sm font-medium text-gray-900 capitalize"><%= language %></h4>
                  <.badge variant="secondary">
                    <%= stats.total %> files
                  </.badge>
                </div>
                <div class="space-y-2">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-500">Compliant:</span>
                    <span class="font-medium text-gray-900"><%= stats.compliant %></span>
                  </div>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-500">Avg Quality:</span>
                    <span class="font-medium text-gray-900"><%= Float.round(stats.avg_quality || 0, 2) %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </.card_content>
      </.card>
    <% end %>

  <!-- Last Update -->
  <div class="mt-8 text-center text-sm text-gray-500 py-8 border-t border-gray-200">
    Last updated: <%= format_timestamp(@last_update) %>
  </div>
</div>