# Singularity GitHub Action Dockerfile
FROM rust:1.70-slim AS builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy source code
COPY packages/code_quality_engine/ ./code_quality_engine/

# Build the CLI tool
WORKDIR /app/code_quality_engine
RUN cargo build --release --bin singularity-scanner

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy the binary
COPY --from=builder /app/code_quality_engine/target/release/singularity-scanner /usr/local/bin/singularity-scanner

# Copy entrypoint script
COPY action/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Set working directory
WORKDIR /github/workspace

# Run the entrypoint
ENTRYPOINT ["/entrypoint.sh"]