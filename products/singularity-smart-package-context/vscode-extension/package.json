{
  "name": "singularity-smart-package-context",
  "displayName": "Singularity Smart Package Context",
  "description": "Know before you code - Package intelligence, examples, and patterns powered by community consensus",
  "version": "0.1.0",
  "publisher": "singularityai",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "package",
    "npm",
    "cargo",
    "documentation",
    "examples",
    "patterns",
    "intelligence",
    "community"
  ],
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/singularityai/singularity.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:singularitySmartPackageContext.getPackageInfo",
    "onCommand:singularitySmartPackageContext.getPackageExamples",
    "onCommand:singularitySmartPackageContext.getPackagePatterns",
    "onCommand:singularitySmartPackageContext.searchPatterns",
    "onCommand:singularitySmartPackageContext.analyzeFile",
    "onCopilotChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "singularitySmartPackageContext.getPackageInfo",
        "title": "Smart Package Context: Get Package Info",
        "description": "Get complete package information including metadata, quality score, and statistics"
      },
      {
        "command": "singularitySmartPackageContext.getPackageExamples",
        "title": "Smart Package Context: Get Package Examples",
        "description": "Get code examples from official documentation and GitHub"
      },
      {
        "command": "singularitySmartPackageContext.getPackagePatterns",
        "title": "Smart Package Context: Get Package Patterns",
        "description": "Get community consensus patterns for a package"
      },
      {
        "command": "singularitySmartPackageContext.searchPatterns",
        "title": "Smart Package Context: Search Patterns",
        "description": "Search patterns across all packages using natural language"
      },
      {
        "command": "singularitySmartPackageContext.analyzeFile",
        "title": "Smart Package Context: Analyze File",
        "description": "Analyze current file and suggest improvements"
      },
      {
        "command": "singularitySmartPackageContext.showStatus",
        "title": "Smart Package Context: Show Status",
        "description": "Show extension status and configuration"
      }
    ],
    "chatParticipants": [
      {
        "id": "singularitySmartPackageContext.chat",
        "name": "smartpackage",
        "description": "Get package intelligence - docs, examples, and patterns",
        "isSticky": true,
        "commands": [
          {
            "name": "info",
            "description": "Get package information"
          },
          {
            "name": "examples",
            "description": "Get code examples"
          },
          {
            "name": "patterns",
            "description": "Get consensus patterns"
          },
          {
            "name": "search",
            "description": "Search patterns"
          }
        ]
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "singularitySmartPackageContext.getPackageInfo"
        },
        {
          "command": "singularitySmartPackageContext.getPackageExamples"
        },
        {
          "command": "singularitySmartPackageContext.getPackagePatterns"
        },
        {
          "command": "singularitySmartPackageContext.searchPatterns"
        },
        {
          "command": "singularitySmartPackageContext.analyzeFile"
        },
        {
          "command": "singularitySmartPackageContext.showStatus"
        }
      ],
      "editor/context": [
        {
          "command": "singularitySmartPackageContext.analyzeFile",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Singularity Smart Package Context",
      "properties": {
        "singularitySmartPackageContext.serverUrl": {
          "type": "string",
          "default": "http://localhost:8888",
          "description": "URL to the remote MCP server (e.g., http://localhost:8888 or http://api.singularity.ai:8888)"
        },
        "singularitySmartPackageContext.defaultEcosystem": {
          "type": "string",
          "default": "npm",
          "enum": ["npm", "cargo", "hex", "pypi", "go", "maven", "nuget"],
          "description": "Default package ecosystem"
        },
        "singularitySmartPackageContext.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show extension status in the status bar"
        },
        "singularitySmartPackageContext.outputChannel": {
          "type": "string",
          "default": "Singularity Smart Package Context",
          "description": "Name of the output channel for displaying results"
        }
      }
    },
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "Singularity Smart Package Context is ready.\n[Get Package Info](command:singularitySmartPackageContext.getPackageInfo)\n[Show Status](command:singularitySmartPackageContext.showStatus)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "format": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode": "^1.75.0"
  }
}
