<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">System Health Dashboard</h1>
    <p class="text-gray-600">Complete overview of Singularity system health and observability</p>
  </div>

  <%= if @loading do %>
    <div class="text-center py-12">
      <p class="text-gray-600">Loading system health...</p>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Adaptive Threshold Card -->
      <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition cursor-pointer">
        <a href="/adaptive-threshold" class="block h-full">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">Adaptive Threshold</h3>
            <span class="text-3xl">
              <%= status_to_emoji(@adaptive_threshold[:convergence_status]) %>
            </span>
          </div>
          <div class="text-sm text-gray-600">
            <p class="mb-2">
              <strong>Status:</strong> <%= @adaptive_threshold[:convergence_status] %>
            </p>
            <p>
              <strong>Threshold:</strong> <%= Float.round(@adaptive_threshold[:current_threshold] || 0.85, 3) %>
            </p>
          </div>
          <div class="mt-4 text-blue-600 hover:text-blue-800 font-semibold">
            View Details →
          </div>
        </a>
      </div>

      <!-- LLM Health Card -->
      <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition cursor-pointer">
        <a href="/nexus-llm-health" class="block h-full">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">LLM Health</h3>
            <span class="text-3xl">
              <%= status_to_emoji(@llm_health[:overall_health]) %>
            </span>
          </div>
          <div class="text-sm text-gray-600">
            <p class="mb-2">
              <strong>Providers:</strong> <%= @llm_health[:healthy_count] || 0 %>/<%= (@llm_health[:healthy_count] || 0) + (@llm_health[:unhealthy_count] || 0) %> healthy
            </p>
            <p>
              <strong>Status:</strong> <%= @llm_health[:overall_health] %>
            </p>
          </div>
          <div class="mt-4 text-blue-600 hover:text-blue-800 font-semibold">
            View Details →
          </div>
        </a>
      </div>

      <!-- Validation Metrics Card -->
      <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition cursor-pointer">
        <a href="/validation-metrics" class="block h-full">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800">Validation Metrics</h3>
            <span class="text-3xl">
              <%= status_to_emoji(@validation[:is_healthy]) %>
            </span>
          </div>
          <div class="text-sm text-gray-600">
            <p class="mb-2">
              <strong>Accuracy:</strong> <%= Float.round(@validation[:validation_accuracy] * 100, 1) %>%
            </p>
            <p>
              <strong>Success:</strong> <%= Float.round(@validation[:execution_success_rate] * 100, 1) %>%
            </p>
          </div>
          <div class="mt-4 text-blue-600 hover:text-blue-800 font-semibold">
            View Details →
          </div>
        </a>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="bg-white rounded-lg shadow p-6 mb-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">Quick Stats</h2>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="p-4 bg-blue-50 rounded-lg">
          <div class="text-sm text-blue-600 font-semibold">Adaptive Threshold</div>
          <div class="text-2xl font-bold text-blue-900 mt-1">
            <%= Float.round(@adaptive_threshold[:current_threshold] || 0.85, 3) %>
          </div>
        </div>

        <div class="p-4 bg-green-50 rounded-lg">
          <div class="text-sm text-green-600 font-semibold">Published Rules</div>
          <div class="text-2xl font-bold text-green-900 mt-1">
            <%= @adaptive_threshold[:published_rules] || 0 %>
          </div>
        </div>

        <div class="p-4 bg-purple-50 rounded-lg">
          <div class="text-sm text-purple-600 font-semibold">Validation Accuracy</div>
          <div class="text-2xl font-bold text-purple-900 mt-1">
            <%= Float.round(@validation[:validation_accuracy] * 100, 1) %>%
          </div>
        </div>

        <div class="p-4 bg-orange-50 rounded-lg">
          <div class="text-sm text-orange-600 font-semibold">Success Rate</div>
          <div class="text-2xl font-bold text-orange-900 mt-1">
            <%= Float.round(@validation[:execution_success_rate] * 100, 1) %>%
          </div>
        </div>
      </div>
    </div>

    <!-- System Overview -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">System Components</h2>

      <div class="space-y-4">
        <div class="flex items-center justify-between p-4 border-b">
          <div>
            <h3 class="font-semibold text-gray-900">Adaptive Confidence Gating</h3>
            <p class="text-sm text-gray-600">Self-tuning threshold for rule publishing</p>
          </div>
          <div class="text-2xl">
            <%= status_to_emoji(@adaptive_threshold[:convergence_status]) %>
          </div>
        </div>

        <div class="flex items-center justify-between p-4 border-b">
          <div>
            <h3 class="font-semibold text-gray-900">LLM Provider Health</h3>
            <p class="text-sm text-gray-600">Circuit breaker status and performance metrics</p>
          </div>
          <div class="text-2xl">
            <%= status_to_emoji(@llm_health[:overall_health]) %>
          </div>
        </div>

        <div class="flex items-center justify-between p-4">
          <div>
            <h3 class="font-semibold text-gray-900">Validation Metrics</h3>
            <p class="text-sm text-gray-600">Accuracy and execution success tracking</p>
          </div>
          <div class="text-2xl">
            <%= status_to_emoji(@validation[:is_healthy]) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Help Section -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="font-semibold text-blue-900 mb-3">About This Dashboard</h3>
      <ul class="text-sm text-blue-800 space-y-2">
        <li>• <strong>Adaptive Threshold:</strong> Self-adjusting confidence gate for rule publishing (target: 90% success)</li>
        <li>• <strong>LLM Health:</strong> Monitor all LLM provider health and circuit breaker status</li>
        <li>• <strong>Validation Metrics:</strong> Track validation accuracy and execution success rates</li>
        <li>• Click on any card to view detailed metrics and analytics</li>
        <li>• Status page auto-refreshes every 30 seconds</li>
      </ul>
    </div>
  <% end %>
</div>
