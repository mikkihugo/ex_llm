<div class="min-h-screen bg-gray-50 p-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-4xl font-bold text-gray-900">‚öôÔ∏è Task Execution Metrics</h1>
        <button
          phx-click="refresh"
          class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
        >
          üîÑ Refresh
        </button>
      </div>
      <p class="text-gray-600">Task DAG execution performance, bottleneck identification, and throughput metrics</p>
    </div>

    <!-- Loading State -->
    <%= if @loading do %>
      <div class="flex items-center justify-center h-64">
        <div class="text-center">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
          <p class="text-gray-600">Loading task execution metrics...</p>
        </div>
      </div>
    <% else %>
      <!-- Error State -->
      <%= if @error do %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
          <p class="text-red-800">‚ö†Ô∏è Error: <%= @error %></p>
        </div>
      <% else %>
        <!-- Dashboard Content -->
        <%= if @dashboard do %>
          <!-- Execution Rates Overview -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Execution Rates</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              <%= if @dashboard.execution_rates do %>
                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Total Executions</p>
                  <p class="text-4xl font-bold text-gray-900">
                    <%= @dashboard.execution_rates.total_executions %>
                  </p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Successful</p>
                  <p class="text-4xl font-bold text-green-600">
                    <%= @dashboard.execution_rates.successful %>
                  </p>
                  <p class="text-xs text-gray-600 mt-1">tasks</p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Failed</p>
                  <p class="text-4xl font-bold text-red-600">
                    <%= @dashboard.execution_rates.failed %>
                  </p>
                  <p class="text-xs text-gray-600 mt-1">tasks</p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Success Rate</p>
                  <p class="text-4xl font-bold text-blue-600">
                    <%= format_percentage(@dashboard.execution_rates.overall_success_rate) %>%
                  </p>
                </div>
              <% end %>
            </div>
          </section>

          <!-- Success Rate by Task Type -->
          <%= if @dashboard.execution_rates && @dashboard.execution_rates.by_task_type && length(@dashboard.execution_rates.by_task_type) > 0 do %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4">Success Rate by Task Type</h2>
              <div class="bg-white rounded-lg shadow-md p-6">
                <div class="space-y-4">
                  <%= for task_type <- @dashboard.execution_rates.by_task_type do %>
                    <div class="border-b border-gray-200 pb-4 last:border-b-0">
                      <div class="flex justify-between items-center mb-2">
                        <span class="font-semibold text-gray-900">
                          <%= task_type.task_type |> String.upcase() |> String.replace("_", " ") %>
                        </span>
                        <span class="text-lg font-bold <%= if task_type.success_rate >= 0.9, do: "text-green-600", else: "text-orange-600" %>">
                          <%= format_percentage(task_type.success_rate) %>%
                        </span>
                      </div>
                      <div class="flex justify-between text-sm text-gray-600">
                        <span><%= task_type.success_count %>/<%= task_type.total %> successful</span>
                        <span><%= task_type.failure_count %> failures</span>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </section>
          <% end %>

          <!-- Timing Metrics -->
          <%= if @dashboard.timing_metrics do %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4">Execution Timing</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Average Total Time</p>
                  <p class="text-3xl font-bold text-blue-600">
                    <%= @dashboard.timing_metrics.avg_total_time_ms %>ms
                  </p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">P95 Total Time</p>
                  <p class="text-3xl font-bold text-yellow-600">
                    <%= @dashboard.timing_metrics.p95_total_time_ms %>ms
                  </p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Slowest Execution</p>
                  <p class="text-3xl font-bold text-red-600">
                    <%= @dashboard.timing_metrics.slowest_execution_ms %>ms
                  </p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Stage Distribution</p>
                  <div class="space-y-1 text-sm">
                    <p>Planning: <%= Float.round(@dashboard.timing_metrics.planning_ms, 1) %>ms</p>
                    <p>Gen: <%= Float.round(@dashboard.timing_metrics.generation_ms, 1) %>ms</p>
                    <p>Val: <%= Float.round(@dashboard.timing_metrics.validation_ms, 1) %>ms</p>
                  </div>
                </div>
              </div>
            </section>
          <% end %>

          <!-- Bottlenecks -->
          <%= if @dashboard.bottlenecks && @dashboard.bottlenecks.slowest_tasks && length(@dashboard.bottlenecks.slowest_tasks) > 0 do %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4">Top Bottlenecks (Slowest Tasks)</h2>
              <div class="bg-white rounded-lg shadow-md p-6">
                <div class="space-y-3">
                  <%= for bottleneck <- @dashboard.bottlenecks.slowest_tasks do %>
                    <div class="p-3 bg-gray-50 rounded-lg border-l-4 <%= if bottleneck.is_bottleneck, do: "border-red-500", else: "border-gray-300" %>">
                      <div class="flex justify-between items-center">
                        <span class="font-semibold text-gray-900">
                          <%= bottleneck.task_type |> String.upcase() |> String.replace("_", " ") %>
                        </span>
                        <span class="text-lg font-bold text-red-600">
                          <%= Float.round(bottleneck.avg_latency_ms, 1) %>ms
                        </span>
                      </div>
                      <p class="text-sm text-gray-600 mt-1">
                        <%= if bottleneck.is_bottleneck, do: "‚ö†Ô∏è Performance issue detected", else: "Within normal range" %>
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            </section>
          <% end %>

          <!-- Throughput -->
          <%= if @dashboard.throughput do %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4">Throughput</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Tasks Per Minute (Last Hour)</p>
                  <p class="text-3xl font-bold text-blue-600">
                    <%= Float.round(@dashboard.throughput.tasks_per_minute, 2) %>
                  </p>
                  <p class="text-sm text-gray-600 mt-2">tasks/min</p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Tasks Per Hour (Last Hour)</p>
                  <p class="text-3xl font-bold text-green-600">
                    <%= @dashboard.throughput.tasks_per_hour %>
                  </p>
                  <p class="text-sm text-gray-600 mt-2">tasks/hour</p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                  <p class="text-sm text-gray-600 mb-2">Peak Throughput Estimate</p>
                  <p class="text-3xl font-bold text-purple-600">
                    <%= Float.round(@dashboard.throughput.peak_throughput, 2) %>
                  </p>
                  <p class="text-sm text-gray-600 mt-2">tasks/min</p>
                </div>
              </div>
            </section>
          <% end %>

          <!-- Error Patterns -->
          <%= if @dashboard.error_patterns do %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4">Error Analysis</h2>
              <div class="bg-white rounded-lg shadow-md p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                  <div>
                    <p class="text-sm text-gray-600 mb-2">Total Failures</p>
                    <p class="text-3xl font-bold text-red-600">
                      <%= @dashboard.error_patterns.total_failures %>
                    </p>
                  </div>

                  <div>
                    <p class="text-sm text-gray-600 mb-2">Failure Rate</p>
                    <p class="text-3xl font-bold text-orange-600">
                      <%= format_percentage(@dashboard.error_patterns.failure_rate) %>%
                    </p>
                  </div>
                </div>

                <%= if @dashboard.error_patterns.by_task_type && length(@dashboard.error_patterns.by_task_type) > 0 do %>
                  <div class="border-t border-gray-200 pt-6">
                    <p class="font-semibold text-gray-900 mb-3">Failures by Task Type</p>
                    <div class="space-y-2">
                      <%= for task_type <- Enum.take(@dashboard.error_patterns.by_task_type, 5) do %>
                        <div class="flex justify-between items-center p-2 bg-gray-50 rounded">
                          <span class="text-gray-900">
                            <%= task_type.task_type |> String.upcase() |> String.replace("_", " ") %>
                          </span>
                          <span class="font-bold text-red-600">
                            <%= task_type.failure_count %> failures
                          </span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </section>
          <% end %>

          <!-- Performance Trend -->
          <%= if @dashboard.performance_trend do %>
            <section class="mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4">7-Day Trend</h2>
              <div class="bg-white rounded-lg shadow-md p-6">
                <%= if @dashboard.performance_trend.daily_metrics && length(@dashboard.performance_trend.daily_metrics) > 0 do %>
                  <div class="space-y-3">
                    <%= for day <- Enum.take(@dashboard.performance_trend.daily_metrics, -7) do %>
                      <div class="flex items-center gap-4 pb-3 border-b border-gray-200 last:border-b-0">
                        <span class="text-gray-600 w-24"><%= day.date %></span>
                        <div class="flex-1">
                          <div class="bg-gray-200 rounded-full h-6 overflow-hidden">
                            <div
                              class="bg-gradient-to-r from-blue-500 to-green-500 h-full flex items-center justify-end pr-2"
                              style={"width: #{day.success_rate * 100}%"}
                            >
                              <span class="text-white text-xs font-bold">
                                <%= Float.round(day.success_rate * 100, 1) %>%
                              </span>
                            </div>
                          </div>
                        </div>
                        <div class="text-right w-32">
                          <p class="font-semibold text-gray-900"><%= day.total_executions %> tasks</p>
                          <p class="text-xs text-gray-600"><%= Float.round(day.avg_latency, 1) %>ms avg</p>
                        </div>
                      </div>
                    <% end %>
                  </div>
                  <div class="mt-6 text-center text-gray-600">
                    Overall Trend:
                    <span class={
                      "font-semibold " <>
                      case @dashboard.performance_trend.trend do
                        :improving -> "text-green-600"
                        :stable -> "text-gray-600"
                        :declining -> "text-red-600"
                        _ -> "text-gray-600"
                      end
                    }>
                      <%= case @dashboard.performance_trend.trend do
                        :improving -> "üìà Improving"
                        :stable -> "‚Üí Stable"
                        :declining -> "üìâ Declining"
                        _ -> "Unknown"
                      end %>
                    </span>
                  </div>
                <% end %>
              </div>
            </section>
          <% end %>

          <!-- Last Updated -->
          <div class="text-sm text-gray-500 text-right">
            Last updated: <%= @dashboard.timestamp |> DateTime.truncate(:second) |> DateTime.to_string() %>
          </div>
        <% else %>
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
            <p class="text-gray-600">No task execution data available</p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
