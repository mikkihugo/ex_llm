{
  "name": "Elixir Standard Quality",
  "spec_version": "1.0",
  "capabilities": [
    "quality"
  ],
  "language": "elixir",
  "quality_level": "standard",
  "description": "Good quality standards for typical Elixir code",
  "requirements": {
    "documentation": {
      "moduledoc": {
        "required": true,
        "min_length": 50,
        "must_include": [
          "overview"
        ]
      },
      "doc": {
        "required_for": [
          "public_functions"
        ],
        "min_length": 30,
        "must_include": [
          "description"
        ]
      }
    },
    "type_specs": {
      "required": true,
      "required_for": [
        "public_functions"
      ],
      "style": "standard"
    },
    "error_handling": {
      "style": "tagged_tuples",
      "required_pattern": "{:ok, result} | {:error, reason}",
      "no_raise": false,
      "explicit_errors": "encouraged"
    },
    "testing": {
      "required": true,
      "coverage_target": 70,
      "test_types": [
        "happy_path",
        "basic_errors"
      ]
    },
    "code_style": {
      "naming_convention": "snake_case",
      "max_function_length": 50,
      "pattern_matching": "encouraged"
    },
    "code_smells": {
      "forbidden": [
        "FIXME",
        "XXX"
      ],
      "warnings": [
        "TODO"
      ]
    }
  },
  "prompts": {
    "code_generation": "Generate standard-quality Elixir code for: {task}\n\nREQUIREMENTS:\n- @moduledoc overview\n- @doc for public functions\n- @spec for public functions\n- Basic error handling\n\nOUTPUT CODE ONLY.",
    "documentation": "Generate documentation for this Elixir code:\n\n```elixir\n{code}\n```\n\nInclude @moduledoc and @doc for public functions.\n\nOUTPUT DOCUMENTATION ONLY.",
    "tests": "Generate basic ExUnit tests for this code:\n\n```elixir\n{code}\n```\n\nInclude happy path and basic error tests.\n\nOUTPUT TEST MODULE ONLY."
  },
  "scoring_weights": {
    "has_moduledoc": 0.8,
    "has_function_docs": 0.8,
    "has_type_specs": 0.7,
    "has_tests": 0.6,
    "error_handling": 0.7,
    "no_code_smells": 0.8
  }
}