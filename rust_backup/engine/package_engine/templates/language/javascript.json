{
  "name": "JavaScript",
  "category": "language",
  "version": "1.0",
  "detector_signatures": {
    "config_files": ["package.json", "package-lock.json", "yarn.lock", "pnpm-lock.yaml"],
    "file_extensions": [".js", ".mjs", ".cjs"],
    "patterns": [
      "function\\s+\\w+",
      "const\\s+\\w+\\s*=",
      "let\\s+\\w+\\s*=",
      "var\\s+\\w+\\s*=",
      "class\\s+\\w+",
      "export\\s+(default|const|function|class)",
      "import\\s+.*from",
      "require\\("
    ],
    "import_patterns": [
      "import\\s+.*from\\s+['\"]([^'\"]+)['\"]",
      "require\\(['\"]([^'\"]+)['\"]\\)"
    ],
    "dependencies": {
      "file": "package.json",
      "section": "dependencies",
      "common_packages": ["react", "express", "next", "vue", "angular"]
    }
  },
  "framework_hints": {
    "react": {
      "patterns": ["import.*React", "from\\s+['\"]react['\"]", "useState", "useEffect"],
      "config_files": [".babelrc", "webpack.config.js"],
      "confidence_boost": 0.4
    },
    "express": {
      "patterns": ["express\\(\\)", "app\\.(get|post|put|delete)", "app\\.listen"],
      "confidence_boost": 0.4
    },
    "next": {
      "patterns": ["from\\s+['\"]next", "getServerSideProps", "getStaticProps"],
      "config_files": ["next.config.js"],
      "confidence_boost": 0.4
    },
    "vue": {
      "patterns": ["import.*Vue", "new\\s+Vue", "createApp"],
      "config_files": ["vue.config.js"],
      "confidence_boost": 0.4
    }
  },
  "build_commands": {
    "install": "npm install",
    "dev": "npm run dev",
    "build": "npm run build",
    "test": "npm test",
    "start": "npm start"
  },
  "metadata": {
    "ecosystem": "npm",
    "package_manager": "npm",
    "typical_structure": ["src/", "lib/", "test/", "public/", "node_modules/"]
  }
}
