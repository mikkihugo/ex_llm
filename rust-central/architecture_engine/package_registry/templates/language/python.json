{
  "name": "Python",
  "category": "language",
  "version": "1.0",
  "detector_signatures": {
    "config_files": ["requirements.txt", "pyproject.toml", "setup.py", "Pipfile", "poetry.lock"],
    "file_extensions": [".py", ".pyw", ".pyx"],
    "patterns": [
      "def\\s+\\w+",
      "class\\s+\\w+",
      "import\\s+\\w+",
      "from\\s+\\w+\\s+import",
      "if\\s+__name__\\s*==\\s*['\"]__main__['\"]",
      "async\\s+def"
    ],
    "import_patterns": [
      "import\\s+([a-zA-Z_][a-zA-Z0-9_.]*)",
      "from\\s+([a-zA-Z_][a-zA-Z0-9_.]*)\\s+import"
    ],
    "dependencies": {
      "file": "requirements.txt",
      "common_packages": ["django", "flask", "fastapi", "requests", "numpy", "pandas"]
    }
  },
  "framework_hints": {
    "django": {
      "patterns": ["from\\s+django", "INSTALLED_APPS", "settings\\.py", "manage\\.py"],
      "config_files": ["manage.py", "settings.py"],
      "confidence_boost": 0.4
    },
    "flask": {
      "patterns": ["from\\s+flask\\s+import", "Flask\\(__name__\\)", "@app\\.route"],
      "confidence_boost": 0.4
    },
    "fastapi": {
      "patterns": ["from\\s+fastapi", "FastAPI\\(", "@app\\.(get|post|put|delete)"],
      "confidence_boost": 0.4
    },
    "pytest": {
      "patterns": ["import\\s+pytest", "def\\s+test_", "@pytest\\."],
      "confidence_boost": 0.2
    }
  },
  "build_commands": {
    "install": "pip install -r requirements.txt",
    "dev": "python manage.py runserver",
    "test": "pytest",
    "check": "python -m py_compile"
  },
  "metadata": {
    "ecosystem": "pypi",
    "package_manager": "pip",
    "typical_structure": ["src/", "tests/", "docs/", "scripts/"]
  }
}
